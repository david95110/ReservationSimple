<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTitle">
        <item name="android:fontFamily">@font/marko_one</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dimen_24sp</item>
    </style>
    <style name="AddGuestTitle" parent="AppTitle">
        <item name="android:textSize">@dimen/dimen_32sp</item>
    </style>
    <style name="AppButton" parent="AppTitle">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
    </style>
    <style name="cardTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
    </style>
    <style name="cardInfo" parent="cardTitle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

</resources>
